
<h2>Login</h2>

<form action="/login" method="POST" id="form-container">
  <label for="email">Email</label>
  <input id="email" type="text" name="email" placeholder="JonSnow">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Login</button>

  <p class="account-message">
    Don't have an account yet?
    <a href="/auth/signup">Signup</a>
  </p>
  -OR-
  <br>
  <br>
  <a href="/auth/google">Login with you Google Account</a>
  <br>
  <a  href="/auth/facebook">Login with you facebook Account</a>
